div(ng-include='"components/navbar/navbar.html"')

.container
  .row
    .col-lg-12
      h1.page-header Your Appointments:
      .well.well-sm
        .list-group
          a.list-group-item(ng-repeat="appointment in userAppointments", href="")
            h4.list-group-item-heading
              {{appointment.dueDate}}
  .row
    .col-lg-12
      form.appointment-form
        label Add an appointment
        p.input-group
          .appointment-datepicker
            .well.well-sm
              //- select options for business type
              .list-group
                a.list-group-item(ng-repeat="business in businesss", href="", ng-click="selectBusiness(business._id)", ng-class="{'active':business._id===selectedBusiness}")
                  h4.list-group-item-heading
                    {{business.name}}
                  p.list-group-item-text
                    {{business.info}}

            .well.well-sm(ng-show="!!selectedBusiness")
              datepicker(ng-model="newAppointmentTimestamp", min-date="minDate")
              timepicker(ng-model="newAppointmentTimestamp", minute-step="30")
          span.input-group-btn
            button.btn.btn-primary(type='submit', ng-click='addAppointment()') Add New Appointment
  
  .row
    .col-lg-12
      .console
        {{newAppointmentTimestamp}}


